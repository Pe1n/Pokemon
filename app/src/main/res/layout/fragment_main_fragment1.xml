<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/main_bac2"
    tools:context="com.pe1n.pokemon.fragment.MainFragment1">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:background="@mipmap/tab"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/menu"/>

        <android.support.design.widget.TabLayout
            android:layout_centerInParent="true"
            android:id="@+id/layout_tab"
            android:layout_width="150dp"
            android:layout_height="40dp"
            app:tabSelectedTextColor="@color/lightgray"
            app:tabTextColor="@color/gray"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Medium"
            app:tabIndicatorColor="@color/lightgray"/>

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/play"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
